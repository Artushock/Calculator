<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yale_blue_A</item>
        <item name="colorPrimaryVariant">@color/yale_blue_B</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yale_yellow_A</item>
        <item name="colorSecondaryVariant">@color/yale_yellow_B</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonsStyle" parent="Theme.Calculator">
        <item name="android:insetRight">@dimen/number_button_inset</item>
        <item name="android:insetLeft">@dimen/number_button_inset</item>
        <item name="android:textSize">@dimen/button_text_size_land</item>
    </style>

    <style name="numberButtonsStyle" parent="ButtonsStyle">
        <item name="backgroundTint">@color/yale_yellow_B</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="mainSignButtonsStyle" parent="numberButtonsStyle">
        <item name="backgroundTint">@color/yale_blue_A</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="signButtonsStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/yale_blue_A</item>
        <item name="android:textSize">@dimen/button_text_size_land</item>
    </style>

    <style name="screenTextView" parent="Theme.Calculator">
        <item name="android:layout_marginBottom">@dimen/screen_margin_bottom_land</item>
        <item name="android:textColor">@color/yale_yellow_A</item>
        <item name="android:textColorHint">@color/yale_yellow_A</item>
        <item name="android:textSize">@dimen/screen_text_size</item>
        <item name="android:background">@drawable/screen_form</item>
        <item name="android:paddingLeft">@dimen/number_button_inset</item>
        <item name="android:paddingRight">@dimen/number_button_inset</item>
        <item name="android:layout_marginRight">@dimen/number_button_inset</item>
        <item name="android:layout_marginLeft">@dimen/number_button_inset</item>
        <item name="android:hint">@string/_0</item>
    </style>


</resources>