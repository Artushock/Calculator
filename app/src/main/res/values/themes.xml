<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Calculator.Theme.Light" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yale_blue_A</item>
        <item name="colorPrimaryVariant">@color/yale_blue_B</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yale_yellow_B</item>
        <item name="colorSecondaryVariant">@color/yale_yellow_A</item>
        <item name="colorOnSecondary">@color/dark_grey_A</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Calculator.Theme.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yale_blue_B</item>
        <item name="colorPrimaryVariant">@color/yale_blue_B</item>
        <item name="colorOnBackground">@color/dark_grey_A</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yale_yellow_B</item>
        <item name="colorSecondaryVariant">@color/yale_yellow_B</item>
        <item name="colorOnSecondary">@color/dark_grey_A</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Calculator.Buttons" parent="Calculator.Theme.Light">
        <item name="android:insetRight">@dimen/number_button_inset</item>
        <item name="android:insetLeft">@dimen/number_button_inset</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="Calculator.Numbers.Buttons" parent="Calculator.Buttons">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Calculator.MainSigns.Buttons" parent="Calculator.Numbers.Buttons">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Calculator.Signs.Buttons" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="Calculator.Screen" parent="Calculator.Theme.Light">
        <item name="android:layout_marginBottom">@dimen/screen_margin_bottom</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textColorHint">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/screen_text_size</item>
        <item name="android:background">@drawable/screen_form</item>
        <item name="android:paddingLeft">@dimen/number_button_inset</item>
        <item name="android:paddingRight">@dimen/number_button_inset</item>
        <item name="android:layout_marginRight">@dimen/number_button_inset</item>
        <item name="android:layout_marginLeft">@dimen/number_button_inset</item>
        <item name="android:hint">@string/_0</item>
    </style>
</resources>